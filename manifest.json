{
  "manifest_version": 3,
  "name": "Flex 근무 계산 확장 (by NARASPACE)",
  "version": "0.1.1",
  "description": "현재까지의 근무시간을 계산합니다.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/favicon-16.png",
      "32": "/images/favicon-32.png",
      "48": "/images/favicon-48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://flex.team/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://flex.team/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
